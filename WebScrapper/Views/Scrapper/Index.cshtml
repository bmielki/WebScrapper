<div class="jumbotron" id="image-scrapper">
    <h2>Image Scrapper</h2>
    <p class="lead">Collection of images obtained from website @ViewBag.Title.</p>
    <p><a href="#word-scrapper" class="btn btn-primary btn-lg">Go to Word Scrapper &raquo;</a></p>
</div>

@foreach (var item in ViewBag.Images)
{
    <figure class="figure">
        <img src="@item.url" class="figure-img img-fluid rounded">
        <figcaption class="figure-caption">@item.url.</figcaption>
    </figure>
}

<div class="jumbotron" id="word-scrapper">
    <h2>Word Scrapper</h2>
    <p class="lead">Collection of most common words used in website @ViewBag.Title.</p>
    <p><a href="#image-scrapper" class="btn btn-primary btn-lg">Go to Image Scrapper &raquo;</a></p>
</div>

@{
    int i = 1;
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Word</th>
            <th scope="col">Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Words)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@item.word</td>
                <td>@item.count</td>
            </tr>
            i++;
        }
    </tbody>
</table>

<div class="container">
    <div class="row">
        <div class="col text-center">
            <p class="mt-3">
                <a href="#top" class="btn btn-primary btn-lg">Go to top &raquo;</a>
            </p>
        </div>
    </div>

</div>

